# TikTok & Amazon 时尚数据抓取系统 - 环境配置文件
# 复制此文件为 .env 并填入实际值

# =============================================================================
# AWS 配置
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=ap-southeast-1
S3_BUCKET_NAME=your-fashion-data-bucket

# =============================================================================
# Vercel 配置
# =============================================================================
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# =============================================================================
# TikTok API 配置
# =============================================================================
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_PASSWORD=your_tiktok_password
TIKTOK_API_KEY=your_tiktok_api_key
TIKTOK_API_SECRET=your_tiktok_api_secret

# =============================================================================
# Amazon API 配置
# =============================================================================
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag
AMAZON_MARKETPLACE=US

# =============================================================================
# 数据库配置
# =============================================================================
# 开发环境使用 SQLite
DATABASE_URL=sqlite:///data/dev.db

# 生产环境使用 Supabase PostgreSQL
# DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# =============================================================================
# 通知配置
# =============================================================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_EMAIL=admin@example.com

# SMTP 配置 (用于邮件通知)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true

# =============================================================================
# 前端配置
# =============================================================================
API_BASE_URL=https://your-api-gateway-url.execute-api.ap-southeast-1.amazonaws.com
VITE_API_BASE_URL=https://your-api-gateway-url.execute-api.ap-southeast-1.amazonaws.com
VITE_DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# =============================================================================
# 部署配置
# =============================================================================
ENVIRONMENT=dev
BUILD_MODE=production
NODE_ENV=production

# =============================================================================
# 监控配置
# =============================================================================
CLOUDWATCH_NAMESPACE=FashionScraper
ALARM_EMAIL=admin@example.com
PERFORMANCE_THRESHOLD=300  # 秒
ERROR_RATE_THRESHOLD=0.1   # 10%

# =============================================================================
# 安全配置
# =============================================================================
JWT_SECRET=your_jwt_secret_key_for_api_authentication
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# =============================================================================
# 限流配置
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 秒
SCRAPING_DELAY=2        # 请求间隔（秒）

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# =============================================================================
# 备份配置
# =============================================================================
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=90
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=cron(0 1 * * *)  # 每天凌晨1点

# =============================================================================
# 开发配置
# =============================================================================
DEBUG=false
TEST_MODE=false
MOCK_API=false
VERBOSE_LOGGING=false

# =============================================================================
# 功能开关
# =============================================================================
ENABLE_AMAZON_SCRAPING=true
ENABLE_TIKTOK_SCRAPING=true
ENABLE_DATA_ANALYTICS=true
ENABLE_REPORTING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=true

# =============================================================================
# 数据抓取配置
# =============================================================================
AMAZON_MAX_PAGES=10
TIKTOK_MAX_POSTS=50
DATA_VALIDATION_STRICT=true
DUPLICATE_CHECK_ENABLED=true
IMAGE_DOWNLOAD_ENABLED=false

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600  # 秒
CACHE_MAX_SIZE=100  # MB
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 性能配置
# =============================================================================
MAX_CONCURRENT_REQUESTS=5
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# =============================================================================
# 清理和维护
# =============================================================================
AUTO_CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=cron(0 3 * * 0)  # 每周日凌晨3点
OLD_DATA_RETENTION_DAYS=90
TEMP_FILE_CLEANUP_ENABLED=true